# =================================
# RULE-BASED CHATBOT
# =================================

def chatbot_response(user_input):
    user_input = user_input.lower()

    # Greetings
    if "hello" in user_input or "hi" in user_input or "hey" in user_input:
        return "Hello! How can I help you today?"

    # Asking name
    elif "your name" in user_input:
        return "I am a rule-based chatbot."

    # Asking help
    elif "help" in user_input:
        return "I can answer simple questions. Try asking about time, date, or say bye."

    # Time
    elif "time" in user_input:
        return "I can't tell the exact time, but you can check your system clock."

    # Date
    elif "date" in user_input or "day" in user_input:
        return "Please check your calendar for today's date."

    # How are you
    elif "how are you" in user_input:
        return "I'm doing great! Thanks for asking."

    # Thank you
    elif "thank" in user_input:
        return "You're welcome! ðŸ˜Š"

    # Exit
    elif "bye" in user_input or "exit" in user_input:
        return "Goodbye! Have a nice day."

    # Default response
    else:
        return "Sorry, I didn't understand that. Can you rephrase?"


# =========================
# MAIN CHAT LOOP
# =========================
print("ðŸ¤– Chatbot: Hello! Type 'bye' to exit.")

while True:
    user = input("You: ")
    response = chatbot_response(user)
    print("ðŸ¤– Chatbot:", response)

    if "bye" in user.lower() or "exit" in user.lower():
        break
